{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "npm": {
      "script": {
        "build": "npm rebuild bcrypt --build-from-source"
      }
    }
  },
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/.*",
      "dest": "/"
    }
  ]
}
